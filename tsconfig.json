{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}